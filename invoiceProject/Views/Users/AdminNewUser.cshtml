@{ ViewData["Title"] = "Index";
                Layout = "_AdminLayout"; }

@section css {
        <link href="@Url.Content("~/css/NewInvoice.css")" rel="stylesheet" />
    }


<div id="mainDiv" class="row">
    <div class="col-1"></div>
    <form id="contact-form" name="contact-form" class="MyForm">
        <div class="row">
            <h2 class="h1-responsive font-weight-bold text-center my-4" style="padding-right: 13px;">
                הזן
                פרטי משתמש
            </h2>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="md-form  form-group">
                    <label for="subject" class="">שם פרטי</label>
                    <input type="text" id="subject" name="subject" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="md-form  form-group">
                    <label for="subject" class="">שם משפחה</label>
                    <input type="text" id="subject" name="subject" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="md-form  form-group">
                    <label for="subject" class="">תאריך הצטרפות</label>
                    <input type="date" id="subject" name="subject" class="form-control">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="md-form form-group">
                    <label for="subject" class="">דואר אלקטרוני</label>
                    <input type="number" id="subject" name="subject" class="form-control">
                </div>
            </div>
        </div>



        <div class="d-flex justify-content-center">
            <input style="background-color: grey;" class="btn btn-primary btn-block sendButton"
                   type="submit" value="הוסף" />
        </div>

    </form>
</div>